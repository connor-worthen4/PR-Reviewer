# Required: comma-separated list of repos to watch (e.g. yourname/project1,yourname/project2)
GITHUB_REPOS=

# Required: absolute path to the claude binary (find with: which claude)
CLAUDE_PATH=

# Optional: poll interval in milliseconds (default: 180000 = 3 minutes)
POLL_INTERVAL_MS=180000

# Optional: log file path (default: ./reviewer.log)
LOG_FILE=

# Optional: Discord notifications (leave empty to disable)
DISCORD_BOT_TOKEN=
DISCORD_CHANNEL_ID=

# Optional: set to 1 for verbose debug logging
DEBUG=0
